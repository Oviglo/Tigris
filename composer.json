{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "symfony/flex": "^2",
        "tigris/core-bundle": "dev-dev",
        "tigris/content-bundle": "dev-dev"
    },
    "require-dev": {
        "symfony/stopwatch": "7.2.*",
        "symfony/web-profiler-bundle": "7.2.*",
        "symfony/var-dumper": "7.2.*",
        "symfony/maker-bundle": "^1.62",
        "phpunit/phpunit": "^11.5.0",
        "symfony/browser-kit": "7.2.*",
        "symfony/css-selector": "7.2.*",
        "symfony/phpunit-bridge": "^7.2",
        "symfony/debug-bundle": "7.2.*",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.75"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*",
            "endpoint": [
                "https://api.github.com/repos/Oviglo/Tigris-Recipes/contents/index.json",
                "flex://defaults"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Oviglo/Tigris-CoreBundle.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/Oviglo/Tigris-ContentBundle.git"
        }
    ],
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    }
}
