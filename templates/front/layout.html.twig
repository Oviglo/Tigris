{% extends 'base.html.twig' %}

{% block body %}
<header class="header" id="main-header">
    <nav class="navbar justify-between bg-base-300">
        <div class="navbar-start">
            <a class="btn btn-ghost text-lg" href="{{ path('tigris_core_homepage') }}">
                Tigris 2
            </a>
        </div>

        <div class="navbar-center">
            {{ knp_menu_render('front_main') }}
        </div>

        <div class="navbar-end flex gap-2">
            <a class="btn btn-circle btn-ghost btn-sm text-xl">
                <i class="fa-brands fa-fw fa-facebook"></i>
            </a>
            <a class="btn btn-circle btn-ghost btn-sm text-xl">
                <i class="fa-brands fa-fw fa-instagram"></i>
            </a>
        </div>
    </nav>
</header>
<main class="flex-1">
    {% block content %}
    {% endblock %}
</main>

<footer class="text-base-content" id="main-footer">
    <div class="footer sm:footer-horizontal footer-center p-10 bg-base-200">

        {# Socials #}
        <nav class="grid grid-flow-col gap-6">
            <a class="btn btn-ghost btn-sm btn-circle">
                <i class="fa-brands fa-facebook text-2xl"></i>
            </a>
            <a class="btn btn-ghost btn-sm btn-circle">
                <i class="fa-brands fa-instagram text-2xl"></i>
            </a>
        </nav>
    </div>

    <aside class="bg-base-300 py-4 px-8 w-full flex gap-2 flex-wrap justify-between items-center text-sm">
        <p class="text-xl flex items-center gap-2">
            <span>Tigris</span>
        </p>
        <p>2025 Oviglo</p>
    </aside>
</footer>
{% endblock %}